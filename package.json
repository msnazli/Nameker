{
  "name": "nameker",
  "private": true,
  "workspaces": [
    "admin-panel",
    "admin-api",
    "miniapp",
    "database",
    "shared"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "admin:dev": "yarn workspace @nameker/admin-panel dev",
    "api:dev": "yarn workspace @nameker/admin-api dev",
    "miniapp:dev": "yarn workspace @nameker/miniapp dev",
    "db:generate": "yarn workspace @nameker/database db:generate",
    "db:push": "yarn workspace @nameker/database db:push",
    "db:studio": "yarn workspace @nameker/database db:studio",
    "start": "yarn api:dev"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "^1.10.12",
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.2"
  },
  "packageManager": "yarn@1.22.19"
}
