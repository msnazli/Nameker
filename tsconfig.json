{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@nameker/admin-panel/*": ["admin-panel/*"],
      "@nameker/admin-api/*": ["admin-api/*"],
      "@nameker/miniapp/*": ["miniapp/*"],
      "@nameker/database/*": ["database/*"],
      "@nameker/shared/*": ["shared/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".turbo"],
  "include": [
    "admin-panel/**/*.ts",
    "admin-panel/**/*.tsx",
    "admin-api/**/*.ts",
    "miniapp/**/*.ts",
    "miniapp/**/*.tsx",
    "database/**/*.ts",
    "shared/**/*.ts"
  ]
} 